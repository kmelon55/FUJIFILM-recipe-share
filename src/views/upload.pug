extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="recipe") recipe File 
        input(type="file", accept="image/*", multiple, required, id="recipe", name="recipe")
        label(for="thumb") Thumbnail File 
        input(type="file", accept="image/*", required, id="thumb", name="thumb")
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=2)
        input(placeholder="Hashtags, serprated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload recipe")